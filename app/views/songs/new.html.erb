<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.text_field :artist_name %><br>
  <!-- User should be able to use a selection box of existing genres -->
  <!--  EX: f.collection_select :person_id, Author.all, :id, :name_with_initial, prompt: true  -->
  <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>

  <!-- Several text input boxes to add notes to the song. These should have the IDs song_notes_1, song_notes_2 -->
  <input name="song[note_contents][]" id="song_notes_1">
  <input name="song[note_contents][]" id="song_notes_2">
  <input name="song[note_contents][]" id="song_notes_3">

  <%= f.submit %>
<% end %>
